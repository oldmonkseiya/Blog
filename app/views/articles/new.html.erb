<section class="new">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <%= form_for @articles do |f| %>
          <div class="form-group">
            <p class="display-3"><%= f.label :title %></p>
            <p><%= f.text_field :title %></p>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body %>
          </div>
          <div class="">
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>
          <div class="btn btn-primary">
            <%= f.submit %>
          </div>
       <% end %>
      </div>
    </div>
  </div>
</section>
